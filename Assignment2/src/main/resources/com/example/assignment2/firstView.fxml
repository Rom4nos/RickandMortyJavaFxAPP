<?import javafx.scene.layout.AnchorPane?>
<AnchorPane stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment2.HelloController">
<VBox alignment="CENTER" prefHeight="599.0" prefWidth="647.0" spacing="20.0" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label prefHeight="40.0" prefWidth="368.0" text="Rick and Morty Character" textFill="#54a42f">
      <font>
         <Font size="33.0" />
      </font>
   </Label>
   <GridPane prefHeight="468.0" prefWidth="605.0">
     <columnConstraints>
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="147.0" minWidth="10.0" prefWidth="147.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="365.0" minWidth="10.0" prefWidth="312.0" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="364.0" minWidth="0.0" prefWidth="17.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="258.0" minWidth="10.0" prefWidth="168.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints maxHeight="103.0" minHeight="10.0" prefHeight="103.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="461.0" minHeight="10.0" prefHeight="408.0" vgrow="SOMETIMES" />
       <RowConstraints maxHeight="461.0" minHeight="10.0" prefHeight="44.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="207.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="191.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <TextField fx:id="textField" prefHeight="26.0" prefWidth="247.0" GridPane.columnIndex="1" />
         <Label fx:id="CharacterName" prefHeight="37.0" prefWidth="138.0" text="Character Name:" textFill="#ffffff">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="172.0" text="Search" textFill="#1000ff" GridPane.columnIndex="3" />
         <ListView fx:id="listView" prefWidth="114.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <Label fx:id="characterCountLabel" prefWidth="161.0" text="Character found(s): 0" GridPane.columnIndex="1" GridPane.rowIndex="2" textFill="#ffffff"/>
      </children>
   </GridPane>

    <Label fx:id="welcomeText" />
</VBox>
</AnchorPane>
